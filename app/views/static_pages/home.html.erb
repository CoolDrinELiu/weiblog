<% provide( :title, 'Home' ) %>
<% if logged_in? %>
    <div class="row">
      <aside class="span4">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section>
          <%= render 'shared/stats' %>
        </section>
        <section>
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="span8">
        <h3>圈子</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>


<% else %>
    <div class="center hero-unit">
      <h1>欢迎</h1>
    </div>
    <%= render 'shared/new' %>


<% end %>